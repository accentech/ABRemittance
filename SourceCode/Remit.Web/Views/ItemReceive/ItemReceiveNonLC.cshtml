            $scope.loadAllPurchaseRequisition();
            
            $scope.PurchaseRequisitionIds = [];
            var ItemReceivePurchaseRequisitionMappings = [];
            ItemReceivePurchaseRequisitionMappings = rowvalue.ItemReceivePurchaseRequisitionMappings;
            for (var pr in ItemReceivePurchaseRequisitionMappings) {
                $scope.PurchaseRequisitionIds.push(ItemReceivePurchaseRequisitionMappings[pr].PurchaseRequisitionId);
            }

            $scope.ReceivedDate = new Date(rowvalue.ReceivedDate);
            $scope.VehicleNo = rowvalue.VehicleNo;
            $scope.DriverName = rowvalue.DriverName; 
            $scope.LoadedTruckWeight = rowvalue.LoadedTruckWeight;
            $scope.EmptyTruckWeight = rowvalue.EmptyTruckWeight;
            $scope.PurchasedFrom = rowvalue.PurchasedFrom;
            $scope.SupplierId = rowvalue.SupplierId;
            $scope.ReceivedBy = rowvalue.ReceivedBy;
            
            $scope.ItemReceiveDetails = rowvalue.ItemReceiveDetails;
            for (x in rowvalue.ItemReceiveDetails) {
                $scope.getAllItemByCategoryId(x, rowvalue.ItemReceiveDetails[x].ItemCategoryId);
